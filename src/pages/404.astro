---
import Layout from '@/layouts/Layout.astro';
import Navbar from '@/components/Navbar.astro';
---

<Layout title="404 - Page Not Found | Grupo Gamu" description="The page you are looking for could not be found.">
  <div class="relative flex h-auto min-h-screen w-full flex-col">
    <Navbar />
    <main class="flex-grow flex flex-col items-center justify-center px-4 py-24 text-center">
      <div class="text-primary mb-6">
        <svg fill="none" height="64" viewBox="0 0 48 48" width="64" xmlns="http://www.w3.org/2000/svg">
          <path d="M42.4379 44C42.4379 44 36.0744 33.9038 41.1692 24C46.8624 12.9336 42.2078 4 42.2078 4L7.01134 4C7.01134 4 11.6577 12.932 5.96912 23.9969C0.876273 33.9029 7.27094 44 7.27094 44L42.4379 44Z" fill="currentColor"></path>
        </svg>
      </div>
      <h1 class="text-6xl font-black text-slate-900 dark:text-white mb-4">404</h1>
      <p class="text-xl text-slate-600 dark:text-slate-300 mb-8">This page could not be found.</p>
      <a
        href="/"
        class="bg-primary hover:bg-primary-dark text-white font-bold h-12 px-8 rounded-lg transition-all shadow-lg shadow-primary/25 hover:shadow-primary/40 inline-flex items-center gap-2"
      >
        <span class="material-symbols-outlined text-sm">arrow_back</span>
        <span>Back to Home</span>
      </a>
    </main>
  </div>
</Layout>
